  client.placeholder      #000000 #0c0c0c #ffffff #000000 

  client.background       #2B2C2B

#############################
### settings for i3-gaps: ###
#############################

# set gaps
gaps inner 15
gaps outer 1

# change outer gaps
bindsym $mod+Shift+j gaps outer all minus 5
bindsym $mod+Shift+k gaps outer all set 15
bindsym $mod+Shift+l gaps outer all plus 5

# change inner gaps
bindsym $mod+Ctrl+j gaps inner all minus 5
bindsym $mod+Ctrl+k gaps inner all set 15
bindsym $mod+Ctrl+l gaps inner all plus 5

# smart gaps (gaps used if only more than one container on the workspace)
smart_gaps on

# smart borders (draw borders around container only if it is not the only container on this workspace) 
# on|no_gaps (on=always activate and no_gaps=only activate if the gap size to the edge of the screen is 0)
smart_borders on

# disable borders
for_window [class=".*"] border pixel 0
hide_edge_borders both